{
  "manifest_version": 2,
  "name": "Privacy Shield A+",
  "version": "1.0.0",
  "description": "Advanced privacy & anti-tracking extension: blocks trackers, detects cookie syncing, canvas fingerprinting, hijack indicators, and scores site privacy.",
  "icons": {
    "16": "src/assets/icon-16.png",
    "48": "src/assets/icon-48.png",
    "128": "src/assets/icon-128.png"
  },
  "browser_action": {
    "default_title": "Privacy Shield",
    "default_popup": "src/ui/popup.html"
  },
  "options_ui": {
    "page": "src/ui/options.html",
    "open_in_tab": true
  },
  "background": {
    "scripts": [
      "src/rules/tracker_data.js",
      "src/background/domainUtils.js",
      "src/background/storage.js",
      "src/background/score.js",
      "src/background/cookieSyncDetector.js",
      "src/background/requestClassifier.js",
      "src/background/rulesEngine.js",
      "src/background/hijackDetector.js",
      "src/background/messaging.js",
      "src/background/background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/contentProbe.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "webNavigation",
    "cookies",
    "storage",
    "activeTab",
    "tabs",
    "<all_urls>"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "privacy-shield@example.com"
    }
  }
}
